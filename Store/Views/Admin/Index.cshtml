@using Store.Models
@model IEnumerable<AppUser>

@{
    ViewBag.Title = "ASP.NET Identity";
}

<div class="panel panel-primary">
    <div class="four"><h1>Учетные записи пользователей</h1></div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Заблокирован</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@Html.CheckBox("User", @user.LockoutEnabled, new { data_userId = user.Id, onchange = "LockoutEnabled(this)" })</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                        {
                            @Html.ActionLink("Изменить", "Edit", new { id = user.Id },
                                     new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                            <button class="btn btn-danger btn-xs" type="submit">Удалить</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>

<script>
    function LockoutEnabled(e) {
        $.ajax({
            url: "@Url.Action("LockoutEnabled", "AdminApi")",
            data: {
                UserId: $(e).data('userid'),
                LockoutEnabled: e.checked
            },
            method: "POST",
            success: function (data) {
                alert('Готово');
            }
        });
    }
</script>